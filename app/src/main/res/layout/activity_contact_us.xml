<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsActivity"
    style="@style/SCREEN">

    <include
        android:id="@+id/contactUsTool"
        layout="@layout/contact_us_toolbar"/>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactUsTool"
        android:layout_margin="10dp"
        android:background="#D3D3D3"
        android:padding="10dp">

        <TextView
            android:id="@+id/address"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address1"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:text="Faculty of Computer Science and Information Technology,"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/address2"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address1"
            android:text="University of Malaya,"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/address3"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address2"
            android:text="50603 Kualau Lumpur,"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/address4"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address3"
            android:text="Federal Territory of Kuala Lumpur"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:layout_margin="10dp"
        android:background="#D3D3D3"
        android:padding="10dp">

        <TextView
            android:id="@+id/contact"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact1"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact"
            android:text="019-523 4811 (Muhammad Idzhans Khairi)"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/contact2"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact1"
            android:text="016-829 0481 (Mohd Hazrin Bin Mohamad)"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/contact3"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact2"
            android:text="017-612 4055 (Nur Iman Bin Norazan)"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/contact4"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact3"
            android:text="019-775 7076 (Afiq Danish Bin Affindi)"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/contact5"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact4"
            android:text="017-584 4094 (Nor Aniq Haqym Bin Nor Azman)"
            android:textSize="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/relative2"
        android:background="#D3D3D3"
        android:padding="10dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Email"/>

        <TextView
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="u20007335@siswa.um.edu.my"/>
    </RelativeLayout>

</RelativeLayout>