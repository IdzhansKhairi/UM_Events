<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/settings_fragment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN">

    <include layout="@layout/profile_toolbar"/>

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profileTB"
        android:textAlignment="gravity"
        app:srcCompat="@drawable/profile_pic" />

        <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MUHAMMAD IDZHANS KHAIRI"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profilePicture"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"
        style="@style/TEXT"/>

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="U2000735@siswa.um.edu.my"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/profileName"
        android:textSize="16dp"
        style="@style/SISWAMAIL"/>

    <TextView
        android:id="@+id/phoneTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="011111111"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/profileName"
        android:textSize="16dp"
        style="@style/SISWAMAIL"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="Logged in as a Organizer"
        android:layout_below="@+id/emailTV"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textSize="16sp"
        style="@style/CREDENTIALS"/>

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Sign out" />

    <TextView
        android:id="@+id/helpAndSupportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help and Support"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signOutBtn"
        style="@style/TEXT"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/contactUsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/helpAndSupportText"
        android:layout_marginTop="10dp"
        android:text="Contact Us"/>

    <Button
        android:id="@+id/feedbackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contactUsBtn"
        android:layout_marginTop="10dp"
        android:text="FEEDBACK" />


